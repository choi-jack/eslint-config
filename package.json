    "repository": {
        "type": "git",
        "url": "git+https://github.com/choi-jack/eslint-config.git"
    },
    "devDependencies": {
        "@eslint/js": "^9.8.0",
        "@stylistic/eslint-plugin": "^2.6.1",
        "@tsconfig/node20": "^20.1.4",
        "@types/eslint__js": "^8.42.3",
        "conventional-changelog-cli": "^5.0.0",
        "eslint": "^9.8.0",
        "rimraf": "^6.0.1",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.0.1"
    },
    "peerDependencies": {
        "typescript-eslint": ">=8"
