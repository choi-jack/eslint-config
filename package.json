{
    "name": "@choi-jack/eslint-config",
    "version": "0.2.1",
    "description": "ESLint configuration for developers proficient in TypeScript.",
    "files": [
        "./dist"
    ],
    "type": "module",
    "exports": "./dist/index.js",
    "engines": {
        "node": ">=20"
    },
    "scripts": {
